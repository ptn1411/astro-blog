---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, getStaticPathsBlogCategory } from '~/utils/blog';

import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';
import { getCanonical, getBlogPermalink } from '~/utils/permalinks';
import { buildBlogListingSchema, buildBreadcrumbList, ensureAbsolute } from '~/utils/structured-data';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogCategory({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: Record<string, string> };

const { page, category } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;
const canonical = String(getCanonical(Astro.url.pathname));
const pageSize = typeof page.size === 'number' ? page.size : page.data.length;
const totalPages = typeof page.lastPage === 'number' ? page.lastPage : undefined;
const startIndex = currentPage > 1 ? (currentPage - 1) * pageSize : 0;

const breadcrumbItems = [
  { name: 'Trang chủ', url: ensureAbsolute('/') },
  { name: 'Blog', url: ensureAbsolute(getBlogPermalink()) },
  { name: category.title, url: canonical },
];

if (currentPage > 1) {
  breadcrumbItems.push({ name: `Trang ${currentPage}`, url: canonical });
}

const structuredData = [
  buildBlogListingSchema({
    url: canonical,
    name: `Chuyên mục ${category.title}`,
    description: `Danh sách bài viết thuộc chuyên mục ${category.title}.`,
    posts: page.data,
    taxonomy: { type: 'category', name: category.title },
    currentPage,
    totalPages,
    startIndex,
  }),
  buildBreadcrumbList(breadcrumbItems),
];

const metadata = {
  title: `Chuyên mục '${category.title}'${currentPage > 1 ? ` - Trang ${currentPage}` : ''}`,
  description: `Những bài viết trong chuyên mục ${category.title}${currentPage > 1 ? ` (trang ${currentPage})` : ''}.`,
  canonical,
  robots: {
    index: blogCategoryRobots?.index,
    follow: blogCategoryRobots?.follow,
  },
  structuredData,
};
---

<Layout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline>{category.title}</Headline>
    <BlogList posts={page.data} />
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</Layout>