---
import Footer from '~/components/widgets/Footer.astro';
import Header from '~/components/widgets/Header.astro';
import Layout from '~/layouts/AnimationLayout.astro';

import { footerData as defaultFooterData, headerData as defaultHeaderData } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  headerData?: typeof defaultHeaderData;
  footerData?: typeof defaultFooterData;
}

const { metadata, headerData, footerData } = Astro.props;

// Use custom navigation if provided, otherwise use default
const finalHeaderData = headerData || defaultHeaderData;
const finalFooterData = footerData || defaultFooterData;
---

<Layout metadata={metadata}>
  <!-- <slot name="announcement">
    <Announcement />
  </slot> -->
  <slot name="header">
    <Header {...finalHeaderData} isSticky showRssFeed showToggleTheme />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...finalFooterData} />
  </slot>
</Layout>
