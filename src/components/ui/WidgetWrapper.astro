---
import type { HTMLTag } from 'astro/types';
import { twMerge } from 'tailwind-merge';
import type { Widget } from '~/types';
import Background from './Background.astro';

export interface Props extends Widget {
  containerClass?: string;
  ['as']?: HTMLTag;
  animationEngine?: 'gsap' | 'anime' | 'css';
  animationType?: string;
  animationDuration?: number;
  animationDelay?: number;
  loopAnimation?: string;
}

const {
  id,
  isDark = false,
  containerClass = '',
  bg,
  as = 'section',
  animationEngine,
  animationType,
  animationDuration,
  animationDelay,
  loopAnimation,
} = Astro.props;

const WrapperTag = as;

// Determine if we should use the new animation system
const hasAnimation = animationEngine === 'gsap' || animationEngine === 'anime';
---

<WrapperTag class="relative not-prose scroll-mt-[72px]" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : <Background isDark={isDark} />}
    </slot>
  </div>
  <div
    class:list={[
      twMerge(
        'relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default',
        // Only apply legacy classes if NOT using new animation system
        !hasAnimation &&
          'intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade',
        containerClass
      ),
      { dark: isDark },
    ]}
    {...hasAnimation
      ? {
          'data-animation-engine': animationEngine,
          'data-animation-type': animationType,
          'data-animation-duration': animationDuration,
          'data-animation-delay': animationDelay,
          'data-loop-animation': loopAnimation,
        }
      : {}}>
    <slot />
  </div>
</WrapperTag>
