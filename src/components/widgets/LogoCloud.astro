---
import Image from '~/components/common/Image.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  logos?: Array<{ src: string; alt?: string }>;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const { title = '', subtitle = '', logos = [], id, isDark = false, classes = {}, bg = '' } = Astro.props;
---

<section
  class:list={['relative not-prose py-12 bg-gray-50 dark:bg-slate-800', { dark: isDark }, classes?.container]}
  {...id ? { id } : {}}>
  <Fragment set:html={bg} />

  <div class="max-w-7xl mx-auto px-4">
    {title && <h3 class="text-center text-lg text-gray-500 dark:text-slate-400 mb-8" set:html={title} />}
    {subtitle && <p class="text-center text-gray-400 dark:text-slate-500 mb-6" set:html={subtitle} />}

    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      {
        logos.map((logo) => (
          <Image
            class="h-8 md:h-10 w-auto grayscale opacity-60 hover:opacity-100 hover:grayscale-0 transition"
            width={120}
            height={40}
            {...logo}
          />
        ))
      }
    </div>
  </div>
</section>
