---
import Image from '~/components/common/Image.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';

export interface Props extends Widget {
  title?: string;
  images?: { src: string; alt?: string }[];
}

const {
  title = '',
  images = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
  ...rest
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto py-12 ${classes?.container ?? ''}`}
  bg={bg}
  {...rest}>
  {title && <h3 class="text-center text-xl font-bold mb-10 dark:text-white" set:html={title} />}
  <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 px-4">
    {
      images.map((image) => (
        <Image
          class="h-8 md:h-12 w-auto grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300 object-contain"
          width={200}
          height={48}
          {...image}
        />
      ))
    }
  </div>
</WidgetWrapper>
