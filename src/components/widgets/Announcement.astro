---
export interface Props {
  badge?: string;
  title?: string;
  link?: string;
  githubUrl?: string;
  githubTitle?: string;
}

const {
  badge = 'NEW',
  title = 'Astro v5.12 is now available!',
  link = 'https://astro.build/blog/astro-5120/',
  githubUrl = 'https://github.com/arthelokyo/astrowind',
  githubTitle = 'If you like AstroWind, give us a star.',
} = Astro.props;
---

<div
  class="dark text-muted text-sm bg-black dark:bg-transparent dark:border-b dark:border-slate-800 dark:text-slate-400 hidden md:flex gap-1 overflow-hidden px-3 py-2 relative text-ellipsis whitespace-nowrap">
  {
    badge && (
      <span class="dark:bg-slate-700 bg-white/40 dark:text-slate-300 font-semibold px-1 py-0.5 text-xs mr-0.5 rtl:mr-0 rtl:ml-0.5 inline-block">
        {badge}
      </span>
    )
  }
  <a href={link} class="text-muted hover:underline dark:text-slate-400 font-medium">{title} Â»</a>
  {
    githubUrl && (
      <a
        target="_blank"
        rel="noopener"
        class="ltr:ml-auto rtl:mr-auto w-[5.6rem] h-[1.25rem] ml-auto bg-contain inline-block bg-[url(https://img.shields.io/github/stars/arthelokyo/astrowind.svg?style=social&label=Stars&maxAge=86400)]"
        title={githubTitle}
        href={githubUrl}></a>
    )
  }
</div>
