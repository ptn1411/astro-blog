---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Features as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 2,
  defaultIcon,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
  itemAnimationType,
  itemAnimationDuration,
  itemAnimationDelay,
  ...rest
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
  {...rest}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline} />
  <ItemGrid
    items={items}
    columns={columns}
    defaultIcon={defaultIcon}
    animationEngine={rest.animationEngine}
    animationType={itemAnimationType}
    animationDuration={itemAnimationDuration}
    animationDelay={itemAnimationDelay}
    classes={{
      container: '',
      title: 'md:text-[1.3rem]',
      icon: 'text-white bg-primary rounded-full w-10 h-10 p-2 md:w-12 md:h-12 md:p-3 mr-4 rtl:ml-4 rtl:mr-0',
      // eslint-disable-next-line @typescript-eslint/no-explicit-any
      ...((classes?.items as Record<string, any>) ?? {}),
    }}
  />
</WidgetWrapper>
